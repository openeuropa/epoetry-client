{
    "name": "openeuropa/epoetry-client",
    "description": "PHP client for the ePoetry service.",
    "type": "library",
    "license": "EUPL-1.2",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "php": "^7.1",
        "ext-soap": "*",
        "php-http/client-common": "^1.6",
        "php-http/discovery": "^1.3",
        "php-http/guzzle6-adapter": "^1.0",
        "php-http/httplug": "^1.0",
        "php-http/message": "^1.6",
        "php-http/message-factory": "^1.0",
        "phpro/soap-client": "^0.7.11",
        "psr/http-message": "^1.0"
    },
    "require-dev": {
        "cweagans/composer-patches": "^1.6",
        "openeuropa/code-review": "dev-master",
        "php-http/mock-client": "~1.0",
        "phpunit/phpunit": "~6.0",
        "symfony/http-foundation": "^3.4",
        "zendframework/zend-code": "~3.1"
    },
    "autoload": {
        "psr-4": {
            "OpenEuropa\\EPoetry\\": "./src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenEuropa\\EPoetry\\Tests\\": "./tests/"
        }
    },
    "extra": {
        "composer-exit-on-patch-failure": true,
        "patches": {
            "phpro/soap-client": {
                "https://github.com/phpro/soap-client/issues/218 - `xsd:simpleType` properties are resolved to non existing classes during code generation": "https://patch-diff.githubusercontent.com/raw/phpro/soap-client/pull/219.patch"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.1.9"
        }
    }
}
